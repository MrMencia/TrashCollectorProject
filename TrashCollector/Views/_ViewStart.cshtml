@{
    if (this.User.IsInRole("Customer"))
    {
        Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
    }
    else if (this.User.IsInRole("Employee"))
    {
        Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}